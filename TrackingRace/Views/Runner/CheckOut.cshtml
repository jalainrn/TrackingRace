@model TrackingRace.ViewModels.RunnerViewModel
@Html.Partial("_Message")

@{
    var isEditMode = Model.Id != null;
    ViewBag.Title = isEditMode ? "Edit" : "Check Out";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-sm-12 col-xs-10">


        @using (Html.BeginForm("SheckOut", "Runner", Model))
        {
            @Html.ValidationSummary("The following errors were found:", new { @class = "alert alert-dismissible alert-danger"})

            <div class="form-row">
                <div class="form-group col-6">
                    <label class="float-right">Race: </label>
                </div>
                <div class="form-group col-6">
                    <label>@ViewBag.RaceName</label>
                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-6">
                    @Html.LabelFor(m => m.FName, new { @class = "float-right" })
                </div>
                <div class="form-group col-6">
                    @Html.DisplayFor(m => m.FName)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    @Html.LabelFor(m => m.LName, new { @class = "float-right" })
                </div>
                <div class="form-group col-6">
                    @Html.DisplayFor(m => m.LName)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    @Html.LabelFor(m => m.SizeName, new { @class = "float-right" })
                </div>
                <div class="form-group col-6">
                    @Html.DisplayFor(m => m.Size.Name)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    @Html.LabelFor(m => m.GenderName, new { @class = "float-right" })
                </div>
                <div class="form-group col-6">
                    @Html.DisplayFor(m => m.Gender.Name)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    @Html.LabelFor(m => m.DOB, new { @class = "float-right" })
                </div>
                <div class="form-group col-6">
                    @Html.DisplayFor(m => m.DOB)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    @Html.LabelFor(m => m.Email, new { @class = "float-right" })
                </div>
                <div class="form-group col-6">
                    @Html.DisplayFor(m => m.Email)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    @Html.LabelFor(m => m.Phone, new { @class = "float-right" })
                </div>
                <div class="form-group col-6">
                    @Html.DisplayFor(m => m.Phone)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                </div>
                <div class="form-group col-md-6">
                    @Html.CheckBoxFor(m => m.WaiverAgreement, new { @disabled = "disabled" }) @Html.DisplayNameFor(m => m.WaiverAgreement)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-6">
                    <button type="submit" class="btn btn-primary float-right">Check Out</button>
                </div>
                <div class="form-group col-6">
                    @Html.ActionLink("Cancel", "ReviewInfo", Model, new { @class = "btn btn-secondary" })
                </div>
            </div>
        }
    </div>
</div>



