@model TrackingRace.ViewModels.RaceTypeViewModel

@Html.Partial("_Message")

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm("RaceType Detail"))
        {

            @Html.HiddenFor(m => m.Id)
            <div class="form-group col-md-10">
                @Html.LabelFor(m => m.Name)
                @Html.DisplayFor(m => m.Name)
            </div>
            <div class="form-group col-md-10">
                @Html.LabelFor(m => m.DistanceKm)
                @Html.DisplayFor(m => m.DistanceKm)
            </div>

            <div class="form-group col-md-10 mt-4">
                @Html.ActionLink("Go Back", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>

