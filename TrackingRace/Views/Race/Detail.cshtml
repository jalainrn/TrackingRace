@model TrackingRace.ViewModels.RaceViewModel

@Html.Partial("_Message")

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-sm-6 col-xs-10">
        @using (Html.BeginForm("Race Detail"))
            {

                @Html.HiddenFor(m => m.Id)

                @*<div class="form-group col-md-10">
                    @Html.LabelFor(m => m.Name)
                    @Html.DisplayFor(m => m.Name)
                </div>*@

                <div class="form-group col-md-10">
                    @Html.LabelFor(m => m.Date)
                    @Html.DisplayFor(m => m.DateString)
                </div>

                <div class="form-group col-md-10">
                    @Html.LabelFor(m => m.RaceTypeName)
                    @Html.DisplayFor(m => m.RaceTypeName)
                </div>

                <div class="form-group col-md-10">
                    @Html.LabelFor(m => m.Profit)
                    @Html.DisplayFor(m => m.Profit)
                </div>

                <div class="form-group col-md-10">
                    @Html.LabelFor(m => m.Address)
                    @Html.DisplayFor(m => m.Address)
                </div>

                <div class="form-group col-md-10">
                    @Html.LabelFor(m => m.City)
                    @Html.DisplayFor(m => m.City)
                </div>

                <div class="form-group col-md-10">
                    @Html.LabelFor(m => m.StateName)
                    @Html.DisplayFor(m => m.StateName)
                </div>

                <div class="form-group col-md-10">
                    @Html.LabelFor(m => m.ZipCode)
                    @Html.DisplayFor(m => m.ZipCode)
                </div>
                
                <div class="form-group col-md-10 mt-4">
                    @Html.ActionLink("Go Back", "Index", null, new { @class = "btn btn-secondary" })
                </div>
        }
    </div>
</div>




